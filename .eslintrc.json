{
  "env": {
      "browser": true,
      "es6": true,
      "mocha": true
  },
  "extends": [
      "standard"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "no-template-curly-in-string": "off",
      "space-before-function-paren": "off",
      "padded-blocks": "off",
      "semi": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"]
  }
}